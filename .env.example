# Environment Variables Configuration
# Copy this file to .env and update the values according to your environment

# Application Settings
NODE_ENV=development
PORT=3000
APP_NAME=LGS_SUPER_xXX
APP_VERSION=1.0.0

# Database Configuration
DB_HOST=localhost
DB_PORT=27017
DB_NAME=lgs_super_xxx
DB_USER=
DB_PASSWORD=
# MongoDB connection string format: mongodb://username:password@host:port/database
MONGODB_URI=mongodb://localhost:27017/lgs_super_xxx

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
SESSION_MAX_AGE=86400000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
FROM_EMAIL=noreply@lgs-super-xxx.com
FROM_NAME=LGS Super XXX

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./public/uploads

# Security Configuration
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# External APIs (if needed)
# EXTERNAL_API_KEY=your-api-key
# EXTERNAL_API_URL=https://api.example.com

# Redis Configuration (for session store if using Redis)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# SSL Configuration (for production)
# SSL_KEY_PATH=./ssl/private.key
# SSL_CERT_PATH=./ssl/certificate.crt